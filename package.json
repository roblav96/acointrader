{
	"scripts": {
		"i": "npm install && npm run client:fixdts",
		"rc": "npm run client:dev",
		"rs": "npm-run-all --parallel server:dev server:start",
		"k": "npm run server:kill",
		"client:fixdts": "rm -f node_modules/vuex/types/vue.d.ts && rm -f node_modules/@types/echarts/index.d.ts",
		"client:dev": "cross-env NODE_ENV=DEVELOPMENT webpack --config client.webpack.config --progress --hide-modules --watch --colors",
		"client:build": "cross-env NODE_ENV=PRODUCTION webpack --config client.webpack.config --progress --hide-modules --colors",
		"server:dev": "cross-env NODE_ENV=DEVELOPMENT webpack --config server.webpack.config --progress --hide-modules --watch --colors",
		"server:kill": "forever stop acoin-development || true && forever stop acoin-production || true && npm run server:cleanlogs",
		"server:cleanlogs": "rm -f ~/.forever/acoin-development.log && rm -f ~/.forever/acoin-production.log",
		"server:start": "npm run server:kill && sleep 3 && cd server && forever start -c 'node --expose-gc --max_old_space_size=512' forever-acoin-development.json && tail -F ~/.forever/acoin-development.log"
	},
