{
	"compilerOptions": {
		"target": "es5",
		"module": "es2015",
		"moduleResolution": "node",
		"lib": ["dom", "es2015"],
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"removeComments": true,
		"pretty": true,
		"sourceMap": true,
		"outDir": "./dist"
	},
	"include": [
		"./types/**/*.d.ts",
		"./shared/**/*.ts",
		"./client/**/*.ts",
		"./server/**/*.ts"
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}
